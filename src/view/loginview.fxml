<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@../css/loginview.css" xmlns="http://javafx.com/javafx/23.0.1" 
    xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">

    <!-- Top section with logo and title -->
    <top>
        <VBox alignment="CENTER" spacing="10" styleClass="header-section">
            <Text styleClass="title-text" text="Pixely" />
        </VBox>
    </top>

    <!-- Center section with login form -->
    <center>
        <StackPane>
            <VBox alignment="CENTER" styleClass="login-form">
                <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-padding: 0 0 10 0;" text="Login to your account" />
                
                <VBox spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Username" />
                    <TextField fx:id="usernameField" promptText="Enter your username" />
                </VBox>
                
                <VBox spacing="5">
                    <Label style="-fx-font-size: 14px; -fx-text-fill: #555;" text="Password" />
                    <PasswordField fx:id="passwordField" promptText="Enter your password" />
                </VBox>
                
                <HBox alignment="CENTER_RIGHT" spacing="5">
                    <Label fx:id="forgotPasswordLabel" styleClass="forgot-password" text="Forgot password?" />
                </HBox>
                
                <Button fx:id="loginButton" defaultButton="true" styleClass="login-button" text="Login" />
                
                <Label fx:id="errorLabel" styleClass="error-label" textAlignment="CENTER" />
            </VBox>
        </StackPane>
    </center>

    <!-- Bottom section with signup option -->
    <bottom>
        <VBox alignment="CENTER" styleClass="bottom-section">
            <HBox alignment="CENTER" spacing="5">
                <Label text="Don't have an account?" />
                <Button fx:id="signupButton" styleClass="signup-button" text="Sign Up" />
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
