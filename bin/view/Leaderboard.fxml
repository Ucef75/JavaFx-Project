<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LeaderboardController">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #2C3E50; -fx-padding: 10;">
            <Label text="Pixely Global Leaderboard" style="-fx-font-size: 24; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Filter by Game:" />
                <ComboBox fx:id="gameFilterComboBox" prefWidth="200" onAction="#filterLeaderboard" />

                <Region HBox.hgrow="ALWAYS" />

                <Label text="Time Period:" />
                <ComboBox fx:id="timePeriodComboBox" prefWidth="150" onAction="#filterLeaderboard">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="All Time" />
                            <String fx:value="This Month" />
                            <String fx:value="This Week" />
                            <String fx:value="Today" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <TableView fx:id="leaderboardTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="rankColumn" text="Rank" prefWidth="50" />
                    <TableColumn fx:id="playerColumn" text="Player" prefWidth="150" />
                    <TableColumn fx:id="gameColumn" text="Game" prefWidth="150" />
                    <TableColumn fx:id="scoreColumn" text="Score" prefWidth="100" />
                    <TableColumn fx:id="dateColumn" text="Date" prefWidth="150" />
                    <TableColumn fx:id="countryColumn" text="Country" prefWidth="150" />
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="refreshButton" text="Refresh" onAction="#refreshLeaderboard" style="-fx-background-color: #3498DB; -fx-text-fill: white;" />
                <Button fx:id="closeButton" text="Close" onAction="#closeLeaderboard" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>