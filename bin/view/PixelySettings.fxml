<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.SettingsController">
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: #2C3E50; -fx-padding: 10;">
            <Label text="User Settings" style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <GridPane hgap="10" vgap="15" alignment="CENTER">
                <padding>
                    <Insets bottom="10" left="10" right="10" top="10" />
                </padding>

                <!-- Username -->
                <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- Password -->
                <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- Confirm Password -->
                <Label text="Confirm Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <PasswordField fx:id="confirmPasswordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <!-- User ID (Disabled) -->
                <Label text="User ID:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="userIdField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <!-- Country (Disabled) -->
                <Label text="Country:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="countryField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <!-- Birth Date (Disabled) -->
                <Label text="Birth Date:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
                <DatePicker fx:id="birthDatePicker" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />

                <!-- Account Created -->
                <Label text="Account Created:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="createdField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <!-- Theme Selection -->
                <Label text="Theme:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
                <ComboBox fx:id="themeComboBox" GridPane.columnIndex="1" GridPane.rowIndex="7" />

                <!-- Notification Settings -->
                <Label text="Notifications:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
                <CheckBox fx:id="notificationsCheckBox" text="Enable Notifications" GridPane.columnIndex="1" GridPane.rowIndex="8" />
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="saveButton" text="Save Changes" onAction="#saveChanges" style="-fx-background-color: #2ECC71; -fx-text-fill: white;" />
                <Button fx:id="cancelButton" text="Cancel" onAction="#cancel" style="-fx-background-color: #E74C3C; -fx-text-fill: white;" />
            </HBox>
        </VBox>
    </center>
</BorderPane>